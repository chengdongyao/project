<view class="container1">
    <view class="userinfo">
        <view class="user-avatar-wrapper">
            <image class="user-avatar" src="{{userInfo.avatarUrl}}" />
        </view>
        <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
        <view class="user-nickname">{{userInfo.nickName}}</view>
    </view>
    <view class="menu-list">
        
        <navigator url="../myinfo/index">
            <view class="my-setting menu-item">
                <view class="menu-item-title">
                    我的资料
                </view>
                <image class="next-icon" src="../../image/rightArrow.png" />
            </view>
        </navigator>
        <navigator url="../mystorge/index">
            <view class="my-course menu-item">
                <view class="menu-item-title">
                    我的收藏
                </view>
                <image class="next-icon" src="../../image/rightArrow.png" />
            </view>
        </navigator>
        <navigator url="../about/about">
            <view class="my-setting menu-item">
                <view class="menu-item-title">
                    关于
                </view>
                <image class="next-icon" src="../../image/rightArrow.png" />
            </view>
        </navigator>
        <navigator url="../res/res">
            <view class="my-setting menu-item">
                <view class="menu-item-title">
                    我的反馈
                </view>
                <image class="next-icon" src="../../image/rightArrow.png" />
            </view>
        </navigator>
    </view>
</view>
